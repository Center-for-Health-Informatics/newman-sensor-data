<form enctype="application/x-www-form-urlencoded" action="{{source}}" method="get" id="export-form" autocomplete="off">
<fieldset id="format-options"><legend>Format</legend>
<ul>
  <li><label><input type="radio" name="format" value="csv" checked> CSV</label></li>
  <li><label><input type="radio" name="format" value="geojson"> GeoJSON</label></li>
</ul>
</fieldset>

<fieldset id="date-range"><legend>Date Range</legend>
<div>
<label for="first-date">First Date</label>
<input type="date" id="first-date" name="first" min="{{temporal.min.tag}}" max="{{temporal.max.tag}}" value="{{temporal.min.tag}}">
</div>

<div>
<label for="last-date">Last Date</label>
<input type="date" id="last-date" name="last" min="{{temporal.min.tag}}" max="{{temporal.max.tag}}" value="{{temporal.max.tag}}">
</div>
</fieldset>

